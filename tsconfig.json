{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "jsx": "react", // FIXME

    "module": "es2022",

    "moduleResolution": "node",
    "types": ["@cloudflare/workers-types"],

    "resolveJsonModule": true,

    "allowJs": false,
    "checkJs": false,

    "noEmit": true,

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/types.d.ts", "src/**/*.ts"],
}
